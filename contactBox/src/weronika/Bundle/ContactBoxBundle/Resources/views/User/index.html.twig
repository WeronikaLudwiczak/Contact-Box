{% extends '::base.html.twig' %}

{% block body %}

{% include('weronikaContactBoxBundle::menu.html.twig') %}
    <h2 class= "well" ><center>User list</center></h2>

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Id</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.description }}</td>
                <td>


                        <a href="{{ path('user_show', { 'id': entity.id }) }}" class="btn btn-primary btn-sm">show</a>


                        <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-info btn-sm">edit</a>

                        <a href="{{ path('user_delete', { 'id': entity.id }) }}" onclick="return confirm('Are you sure do you want to delet {{ entity.firstName }}  {{ entity.lastName }} ?') "class="btn btn-warning btn-sm">Delete</a>


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>

            <a href="{{ path('user_new') }}">
                Create a new User
            </a>

    </ul>
    {% endblock %}

