{% extends '::base.html.twig' %}

{% block body -%}
    <ul class="pager">
        <li class="previous disabled"><a href="javascript:history.go(-1)">&larr; previous page</a></li>
    </ul>
    <legend class="well"><center>Phone Details</center></legend>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Phone number</th>
                <td>{{ entity.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Phone type</th>
                <td>{{ entity.phoneType }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ entity.user }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col-lg-10">
        <a href="{{ path('user_edit', { 'id': entity.id }) }}" class ="btn btn-danger btn-sm">
            Edit
        </a>
        <h1></h1>
        {% block delete %}
            {{ form_start(delete_form) }}
            {{ form_widget(delete_form.submit, { 'label': 'Delete', 'attr': {'class': 'btn btn-success btin-sm'} }) }}
            {{ form_end(delete_form) }}
        {% endblock %}
    </div>

{% endblock %}
