{% extends '::base.html.twig' %}

{% block body -%}
    {% include('weronikaContactBoxBundle::menu.html.twig') %}
    <h2 class= "well" ><center>Addresses</center></h2>
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Id</th>
            <th>City</th>
            <th>Street</th>
            <th>House Number</th>
            <th>Flat Number</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('address_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.houseNumber }}</td>
                <td>{{ entity.flatNumber }}</td>
                <td>


                    <a href="{{ path('address_show', { 'id': entity.id }) }}" class="btn btn-primary btn-sm">show</a>


                    <a href="{{ path('address_edit', { 'id': entity.id }) }}" class="btn btn-info btn-sm">edit</a>



                    <a href="{{ path('address_delete', { 'id': entity.id }) }}" onclick="return confirm('Are you sure do you want to delet the address ?') "class="btn btn-warning btn-sm">Delete</a>


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>

        <a href="{{ path('address_new') }}">
            Create a new Address
        </a>

    </ul>
    {% endblock %}
