{% extends '::base.html.twig' %}

{% block body -%}
    <ul class="pager">
        <li class="previous disabled"><a href="javascript:history.go(-1)">&larr; previous page</a></li>
    </ul>
    <legend class="well"><center>Address Details</center></legend>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ entity.street }}</td>
            </tr>
            <tr>
                <th>Housenumber</th>
                <td>{{ entity.houseNumber }}</td>
            </tr>
            <tr>
                <th>Flatnumber</th>
                <td>{{ entity.flatNumber }}</td>
            </tr>
        </tbody>
    </table>


    <div class="col-lg-10">
        <a href="{{ path('address_edit', { 'id': entity.id }) }}" class ="btn btn-danger btn-sm">
            Edit
        </a>
        <h1></h1>
        {% block delete %}
            {{ form_start(delete_form) }}
            {{ form_widget(delete_form.submit, { 'label': 'Delete', 'attr': {'class': 'btn btn-success btin-sm'} }) }}
            {{ form_end(delete_form) }}
        {% endblock %}
    </div>
{% endblock %}
